@{
    ViewData["Title"] = "Home Page";
}

<div class="titulo">
    <br /><br /><br />
    <h3 style="text-align:center;">Tratamientos</h3>
    <hr style="width: 5%; text-align: center; height: 5px; background-color: #BCD8D9;">
    <br /><br />
</div>

<section class="">
    <div class="container-fluid">
        <div class="col-12 col-sm-12">
            <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
                <div class="d-none d-sm-block d-md-block">
                    <ol class="carousel-indicators">
                        <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
                        <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
                        <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
                        <li data-target="#carouselExampleIndicators" data-slide-to="3"></li>
                    </ol>
                </div>
                <div class="carousel-inner">
                    <div class="carousel-item img-vh active">
                        <img src="https://www.inedent.cl/img/Sliders-(4).png" class="w-100" alt="Banner 04">
                    </div>
                    <div class="carousel-item img-vh">
                        <img src="https://www.inedent.cl/img/Sliders-(2).png" class="w-100" alt="Banner 02">
                    </div>
                    <div class="carousel-item img-vh">
                        <img src="https://www.inedent.cl/img/Sliders-(3).png" class="w-100" alt="Banner 03">
                    </div>
                    <div class="carousel-item img-vh">
                        <img src="https://www.inedent.cl/img/Sliders-(1).png" class="w-100" alt="Banner 01">
                    </div>
                </div>
                <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev"
                   style="left: 0 ! important;">
                    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                    <span class="sr-only">Previous</span>
                </a>
                <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next"
                   style="right: 0 ! important;">
                    <span class="carousel-control-next-icon" aria-hidden="true"></span>
                    <span class="sr-only">Next</span>
                </a>
            </div>
        </div>
    </div>
</section>